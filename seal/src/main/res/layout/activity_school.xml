<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/roundBtn1"
            android:text="校园"
            android:background="@drawable/circle_button_shape"
            android:layout_width="70dp"
            android:layout_height="70dp"
            />
        <Button
            android:id="@+id/roundBtn2"
            android:layout_marginLeft="30dp"
            android:text="宿舍"
            android:background="@drawable/circle_button_shape"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/roundBtn3"
            android:text="班级"
            android:background="@drawable/circle_button_shape"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />
        <Button
            android:layout_marginLeft="30dp"
            android:id="@+id/roundBtn4"
            android:text="宿舍小卖部"
            android:background="@drawable/circle_button_shape"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/roundBtn5"
            android:text="跳蚤市场"
            android:background="@drawable/circle_button_shape"
            android:layout_width="110dp"
            android:layout_height="110dp"
            />
        <Button
            android:id="@+id/roundBtn6"
            android:text="校花"
            android:layout_marginLeft="30dp"
            android:background="@drawable/circle_button_shape"
            android:layout_width="70dp"
            android:layout_height="70dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/roundBtn7"
            android:text="社团"
            android:background="@drawable/circle_button_shape"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />
        <Button
            android:id="@+id/roundBtn8"
            android:layout_marginLeft="30dp"
            android:text="青春有约"
            android:background="@drawable/circle_button_shape"
            android:layout_width="70dp"
            android:layout_height="70dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/roundBtn9"
            android:text="失物招领"
            android:background="@drawable/circle_button_shape"
            android:layout_width="90dp"
            android:layout_height="90dp"
            />
        <Button
            android:id="@+id/roundBtn10"
            android:text="兼职"
            android:layout_marginLeft="30dp"
            android:background="@drawable/circle_button_shape"
            android:layout_width="70dp"
            android:layout_height="70dp"
            />
    </LinearLayout>

</LinearLayout>